COMPILER = g++
FLAGS = -o
FLAGS_EXTRA = -Wextra
EXE = prog
SRC = *.cpp *.h
LINK = -lopencv_core -lopencv_highgui -lopencv_imgproc -lopencv_nonfree -lopencv_features2d -lopencv_flann -lopencv_calib3d

#compiling
main:
	$(COMPILER) $(SRC) $(LINK) $(INCLUDE) $(FLAGS) $(EXE)
	
run:
	@echo "running the program"
	./$(EXE)

